# Server Configuration
PORT=3000
NODE_ENV=development

# Stream Chat Configuration
STREAM_CHAT_API_KEY=your_stream_chat_api_key_here
STREAM_CHAT_SECRET=your_stream_chat_secret_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_for_app_authentication
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-app-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info